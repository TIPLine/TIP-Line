<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.tipline.android_app.CameraTip"
    tools:showIn="@layout/activity_camera_tip"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".65"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation = "vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tip Subject"
                android:id="@+id/title"
                android:layout_marginTop="50dp"
                android:textColor="@color/aadarkblue" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/subjectEditText"
                android:textColor="?attr/colorControlNormal" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tip Information"
                android:id="@+id/textView3"
                android:layout_marginTop="36dp"
                android:textColor="@color/aadarkblue" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/infoEditText"
                android:textColor="?attr/colorControlNormal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Attachments"
                android:id="@+id/attachments"
                android:layout_marginTop="15dp"
                android:textColor="@color/aadarkblue" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="85dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/thumbnail_layout">

                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_attachment"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_alignParentBottom="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Add Attachment"
                    android:textColor="@color/aalightblue" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@android:color/background_light">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="Cancel"
            android:id="@+id/textCancel"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:text="Submit"
            android:id="@+id/textSubmit"
            android:textSize="20sp"
            android:background="@color/aalightblue"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</LinearLayout>